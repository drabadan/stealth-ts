  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "stealth-ts",
      "args": [
        "${workspaceFolder}/apps/stealth-ts/src/main.ts"
      ],
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "ts-node/register",
        "-r",
        "tsconfig-paths/register"
      ],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}/apps/stealth-ts",
      "protocol": "inspector",
      "port": 3333
    }   
  ]
}